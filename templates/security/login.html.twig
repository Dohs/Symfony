{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
    <div class="container">
<form  method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-row justify-content-center">
    <label for="inputUsername" class="sr-only ">Pseudo</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control col-6" placeholder="Pseudo" required autofocus>
    </div>
    <div class="form-row justify-content-center">
    <label for="inputPassword" class="sr-only">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control mt-1 col-6" placeholder="Mot de passe" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
<div class="row justify-content-center">
    <button class="btn btn-lg btn-primary mt-1" type="submit">
        Valider
    </button>
</div>
</form>
    </div>
{% endblock %}
